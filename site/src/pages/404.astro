---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout
  title="Page Not Found - RefleK's"
  description="The page you're looking for doesn't exist."
>
  <Header slot="header" currentPath="" />

  <main class="flex-1 flex items-center justify-center px-4 py-16 sm:py-24">
    <div class="max-w-2xl mx-auto text-center">
      <!-- 404 Error -->
      <div class="mb-8">
        <h1 class="text-8xl sm:text-9xl font-bold gradient-text mb-4">404</h1>
        <h2 class="text-2xl sm:text-3xl font-semibold text-text-primary mb-4">
          Page Not Found
        </h2>
        <p class="text-lg text-text-secondary max-w-md mx-auto">
          Looks like you've wandered off target. The page you're looking for
          doesn't exist.
        </p>
      </div>

      <!-- Quick Links -->
      <div class="mt-12 space-y-4">
        <p class="text-sm text-text-muted mb-6">
          Here are some helpful links instead:
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-accent-primary text-black font-semibold hover:bg-accent-hover transition-colors"
          >
            ← Back to Home
          </a>
          <a
            href="/docs"
            class="inline-flex items-center justify-center px-6 py-3 rounded-xl border border-border-primary bg-bg-secondary text-text-primary hover:bg-bg-tertiary transition-colors"
          >
            Documentation
          </a>
        </div>
        <div class="flex flex-wrap gap-4 justify-center mt-6 text-sm">
          <a
            href="/features"
            class="text-accent-primary hover:text-accent-hover transition-colors"
          >
            Features
          </a>
          <span class="text-border-primary">•</span>
          <a
            href="/changelog"
            class="text-accent-primary hover:text-accent-hover transition-colors"
          >
            Changelog
          </a>
          <span class="text-border-primary">•</span>
          <a
            href="https://github.com/ARm8-2/refleks"
            target="_blank"
            rel="noopener"
            class="text-accent-primary hover:text-accent-hover transition-colors"
          >
            GitHub
          </a>
        </div>
      </div>
    </div>
  </main>

  <Footer slot="footer" />
</BaseLayout>

<style>
  main {
    min-height: calc(100vh - 200px);
  }
</style>
