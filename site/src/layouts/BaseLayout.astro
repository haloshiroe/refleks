---
interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "RefleK's is a free, open-source desktop app that analyzes your KovaaK's stats in real-time.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="RefleK's" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Preload critical assets for LCP -->
    <link
      rel="preload"
      href="/assets/fonts/Montserrat-VariableFont_wght.ttf"
      as="font"
      type="font/ttf"
      crossorigin
    />
    <link
      rel="preload"
      href="/assets/images/sessions.webp"
      as="image"
      type="image/webp"
    />
    <link
      rel="preload"
      href="/assets/RefleKs.mp4"
      as="video"
      type="video/mp4"
    />

    <!-- Inline critical font-face to prevent layout shift -->
    <style>
      @font-face {
        font-family: "Montserrat";
        src: url("/assets/fonts/Montserrat-VariableFont_wght.ttf")
          format("truetype");
        font-weight: 100 900;
        font-style: normal;
        font-display: block;
      }
      html,
      body {
        font-family:
          "Montserrat",
          system-ui,
          -apple-system,
          BlinkMacSystemFont,
          "Segoe UI",
          sans-serif;
      }
    </style>
  </head>
  <body class="text-text-primary min-h-screen antialiased">
    <slot name="header" />
    <main>
      <slot />
    </main>
    <slot name="footer" />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
